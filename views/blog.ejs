<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog Page</title>
    <style>
      body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: "Poppins", sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
      }
      .container {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: flex-start;
        padding: 60px 20px;
        min-height: 100vh;
        gap: 40px;
        overflow: hidden;
      }
      .card {
        background: #1e1e1e;
        border: 1px solid #333;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        width: 700px;
        max-width: 100%;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      }
      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.7);
      }
      .card img {
        width: 100%;
        height: 400px;
        object-fit: cover;
      }
      .card-body {
        padding: 40px;
        text-align: left;
      }
      .card-title {
        font-size: 3rem;
        margin-bottom: 20px;
        color: #fff;
      }
      .card-text {
        color: #b0b0b0;
        font-size: 1.3rem;
        line-height: 1.8;
      }
      .author-text {
        font-size: 1rem;
        margin-top: 30px;
        font-style: italic;
        color: #aaa;
      }
      .btn-primary {
        background-color: #7d2ae8;
        border: none;
        padding: 14px 30px;
        border-radius: 10px;
        font-size: 1rem;
        display: inline-block;
        margin-top: 30px;
        color: #fff;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
      }
      .btn-primary:hover {
        background-color: #591ea5;
        transform: translateY(-3px);
      }
      .comments-section {
        width: 350px;
        max-width: 100%;
        /* margin-top: -15px; */
      }
      .comments-card,
      .form-card {
        background: #1e1e1e;
        border: 1px solid #333;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
        margin-bottom: 20px;
      }
      .comment {
        background: #252525;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
      }
      .comment p {
        margin: 0;
        font-size: 1rem;
        color: #ddd;
      }
      .comment .comment-author {
        margin-top: 8px;
        font-size: 0.85rem;
        color: #aaa;
      }
    </style>
  </head>
  <body>
    <%- include("./partials/navbar") %> <% if (locals.blog) { %>
    <div class="container">
      <div>
        <div class="card">
          <img
            src="<%= blog.coverImgUrl %>"
            class="card-img-top"
            alt="Blog Image"
          />
          <div class="card-body">
            <h1 class="card-title"><%= blog.title %></h1>
            <pre
              class="card-text"
              style="overflow: hidden; text-align: justify"
            >
<%= blog.body%></pre
            >
            <p class="card-text" style="overflow: hidden; text-align: justify">
              Video :
              <a
                target="_blank"
                style="text-decoration: none"
                href="<%= blog.videoLink %>"
                ><%= blog.videoLink %></a
              >
            </p>
            <p class="author-text">Written by <%= blog.createdBy.name %></p>
          </div>
        </div>
      </div>

      <div class="comments-section">
        <div class="form-card">
          <form action="/blog/comment/<%= blog._id %>" method="post">
            <div>
              <input
                type="text"
                name="content"
                class="form-control"
                id="comment"
                placeholder="Enter your Comment"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary w-100">
              Submit Comment
            </button>
          </form>
        </div>
        <% if (locals.comments[0]) { %>
        <div class="comments-card">
          <h3
            style="color: #fff; font-weight: 700; text-align: center"
            class="mb-3"
          >
            Total Comments : <%= comments.length %>
          </h3>
          <% comments.forEach(comment => { %>
          <div class="comment">
            <p><%= comment.content %></p>
            <p class="comment-author">by <%= comment.createdBy.name %></p>
          </div>
          <% }) %>
        </div>
      </div>
      <% } %>
    </div>
    <% } %> <%- include('./partials/scripts') %>
  </body>
</html>
